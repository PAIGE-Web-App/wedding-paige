{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json", // Inherit base config from root
  "compilerOptions": {
    "target": "ES2022", // Override: JavaScript version for Next.js output seems to be the newest thats allowed https://nextjs.org/docs/architecture/supported-browsers#javascript-language-features
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ], // Override: Include browser DOM APIs
    "jsx": "preserve", // Override: Let Next.js handle JSX transformation
    "plugins": [
      {
        "name": "next" // Next.js TypeScript plugin for enhanced intellisense
      }
    ],
    "baseUrl": ".", // Base directory for resolving non-relative module names
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts", // Next.js environment types
    "**/*.ts", // All TypeScript files
    "**/*.tsx", // All TypeScript React files
    ".next/types/**/*.ts", // Next.js generated types
    "src/**/*" // Everything in src directory
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build"
  ]
}