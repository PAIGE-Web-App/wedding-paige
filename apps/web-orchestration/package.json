{
  "name": "@paige/web-orchestration",
  "version": "1.0.0",
  "private": true,
  "description": "BFF (Backend for Frontend) layer for Paige web app",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "lint": "eslint '**/*.ts'",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "lint-staged": {
		"*.{js,ts,cjs,mjs,tsx,json,css,scss,md,html,svelte}": [
			"prettier --write"
		],
		"*.{js,ts,cjs,mjs,tsx,svelte}": [
			"eslint --fix"
		]
	},
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.3"
  }
}
