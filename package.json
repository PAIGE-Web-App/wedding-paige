{
	"name": "paige-monorepo",
	"version": "1.0.0",
	"description": "Paige repo containing web app and lambdas",
	"main": "index.js",
	"scripts": {
		"build": "pnpm -r build",
		"build:ci": "pnpm -r --filter '!web' build",
		"clean": "pnpm -r clean && rm -rf node_modules",
		"web:dev": "cd web && pnpm dev",
		"test": "pnpm -r test",
		"lint": "eslint '**/*.ts'",
		"format": "prettier --write '**/*.{ts,json,css,md,svelte}'",
		"format:web": "prettier --write 'web/src/**/*.{ts,json,css,md,svelte}'",
		"lambda-local": "pnpm run build && zip -r terraform/environments/dev/acad-rise-sign-up-lambda.zip packages/acad-rise-sign-up-lambda/ && zip -r terraform/environments/dev/acad-rise-scheduler.zip packages/acad-rise-scheduler/",
		"lambda:ci": "pnpm run build:ci && zip -r terraform/environments/dev/acad-rise-sign-up-lambda.zip packages/acad-rise-sign-up-lambda/ && zip -r terraform/environments/dev/acad-rise-scheduler.zip packages/acad-rise-scheduler/dist/ packages/acad-rise-scheduler/package.json",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,tsx,json,css,scss,md,html,svelte}": [
			"prettier --write"
		],
		"*.{js,ts,cjs,mjs,tsx,svelte}": [
			"eslint --fix"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src"
		],
		"testMatch": [
			"**/tests/**/*.test.ts"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1",
			"^@components/(.*)$": "<rootDir>/src/components/$1",
			"^@utils/(.*)$": "<rootDir>/src/utils/$1",
			"^@services/(.*)$": "<rootDir>/src/services/$1",
			"^@types/(.*)$": "<rootDir>/src/types/$1",
			"^@config/(.*)$": "<rootDir>/src/config/$1"
		},
		"moduleFileExtensions": [
			"ts",
			"js",
			"json"
		]
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.5",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^16.2.4",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.7.0",
		"ts-jest": "^29.2.5",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.19.1"
	},
	"dependencies": {
		"cheerio": "^1.0.0"
	},
	"packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
