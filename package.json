{
	"name": "paige-monorepo",
	"version": "1.0.0",
	"description": "Paige repo containing web app and lambdas",
	"main": "index.js",
	"engines": {
		"node": ">=24.0.0",
		"pnpm": ">=10.0.0"
	},
	"scripts": {
		"dev": "pnpm --parallel --filter=./apps/* dev",
		"dev:web": "pnpm --filter=wedding-paige dev",
		"dev:orchestration": "pnpm --filter=@paige/web-orchestration dev",
		"build": "pnpm -r --filter=./apps/* build",
		"build:web": "pnpm --filter=wedding-paige build",
		"build:orchestration": "pnpm --filter=@paige/web-orchestration build",
		"start": "pnpm --parallel --filter=./apps/* start",
		"start:web": "pnpm --filter=wedding-paige start",
		"start:orchestration": "pnpm --filter=@paige/web-orchestration start",
		"clean": "pnpm -r clean && rm -rf node_modules",
		"test": "pnpm -r test",
		"lint": "pnpm -r --filter=./apps/* lint",
		"format": "prettier --write '**/*.{ts,tsx,json,css,md}'",
		"typecheck": "pnpm -r --filter=./apps/* --parallel exec tsc --noEmit",
		"docker:build:web": "docker build -f apps/web/Dockerfile -t paige-web .",
		"docker:build:orchestration": "docker build -f apps/web-orchestration/Dockerfile -t paige-orchestration .",
		"docker:build": "pnpm docker:build:web && pnpm docker:build:orchestration",
		"prepare": "husky install",
		"e2e:ci": "playwright test --pass-with-no-tests"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,tsx,json,css,scss,md,html,svelte}": [
			"prettier --write"
		],
		"*.{js,ts,cjs,mjs,tsx,svelte}": [
			"eslint --fix"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src"
		],
		"testMatch": [
			"**/tests/**/*.test.ts"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1",
			"^@components/(.*)$": "<rootDir>/src/components/$1",
			"^@utils/(.*)$": "<rootDir>/src/utils/$1",
			"^@services/(.*)$": "<rootDir>/src/services/$1",
			"^@types/(.*)$": "<rootDir>/src/types/$1",
			"^@config/(.*)$": "<rootDir>/src/config/$1"
		},
		"moduleFileExtensions": [
			"ts",
			"js",
			"json"
		]
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.5",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^16.2.4",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.7.0",
		"ts-jest": "^29.2.5",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.19.1",
		 "@playwright/test": "^1.43.0",
		 "@commitlint/cli": "^19.0.0",
		 "@commitlint/config-conventional": "^19.0.0"
	},
	"dependencies": {
		"cheerio": "^1.0.0"
	},
	"packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}